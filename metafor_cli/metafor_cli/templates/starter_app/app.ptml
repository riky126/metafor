                <button onclick=@{decrement} aria-label="Increase the counter by one">
                    <svg viewBox="0 0 16 16" fill="none"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M8.00003 8.1716L3.41424 3.58582L0.585815 6.41424L8.00003 13.8285L15.4142 6.41424L12.5858 3.58582L8.00003 8.1716Z" fill="#000000"></path> </g></svg>
                </button>
            </section>
        </main>

        <footer>
            <p>
                visit <a href="https://github.com/google-deepmind/metafor">metafor docs</a> to learn Metafor
            </p>
        </footer>
    </div>
}

